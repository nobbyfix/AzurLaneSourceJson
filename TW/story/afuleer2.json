        "speedUp": 0.01
      },
      "painting": {
        "alpha": 0.3,
        "time": 1
      },
      "bgName": "bg_story_task"
    },
    {
      "say": "曙光拿過來了兩個裝著透明液體的不鏽鋼杯",
      "typewriter": {
        "speed": 0.05,
        "speedUp": 0.01
      },
      "side": 2,
      "dir": 1,
      "flashout": {
        "alpha": [
          0,
          1
        ],
        "dur": 0.5,
        "black": true
      },
