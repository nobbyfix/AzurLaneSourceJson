      "side": 2,
      "dir": 1,
      "nameColor": "#ffa500",
      "typewriter": {
        "speed": 0.05,
        "speedUp": 0.01
      },
      "painting": {
        "alpha": 0.3,
        "time": 1
      },
      "say": "迎接没有纷争、没有痛苦、也没有悲伤的新世界……"
