    },
    {
      "side": 2,
      "dir": 1,
      "typewriter": {
        "speed": 0.05,
        "speedUp": 0.01
      },
      "say": "起身关窗时，{namecode:181}走进了指挥室。正当关好窗户转过身来的一瞬间——",
      "painting": {
        "alpha": 0.3,
        "time": 1
      },
