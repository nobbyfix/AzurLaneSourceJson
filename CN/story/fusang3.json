  "scripts": [
    {
      "stopbgm": true,
      "sequence": [
        [
          "在樱花纷飞的那天之后\n\n<size=45>三  不擅长发邮件？</size>",
          1
        ]
      ],
      "mode": 1
    },
    {
      "side": 2,
      "dir": 1,
      "nameColor": "#a9f548",
      "painting": {
        "alpha": 0.3,
        "time": 1
      },
      "flashout": {
        "alpha": [
          0,
          1
        ],
