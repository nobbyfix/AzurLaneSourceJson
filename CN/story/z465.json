      "typewriter": {
        "speed": 0.05,
        "speedUp": 0.01
      },
      "say": "Z46？",
      "painting": {
        "alpha": 0.3,
        "time": 1
      },
      "bgName": "bg_story_school"
    },
    {
      "actor": 401460,
      "side": 0,
      "say": "我、试试看……好了。",
      "typewriter": {
        "speed": 0.05,
        "speedUp": 0.01
      },
      "painting": {
