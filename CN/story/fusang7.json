      "sequence": [
        [
          "在樱花纷飞的那天之后\n\n<size=45>七  小小的幸福</size>",
          1
        ]
      ],
      "mode": 1
    },
    {
      "side": 2,
      "dir": 1,
      "nameColor": "#a9f548",
      "painting": {
