    },
    {
      "actor": 10700030,
      "side": 2,
      "dir": 1,
      "nameColor": "#a9f548",
      "expression": 3,
      "hidePaintEquip": true,
      "say": "Stop talking for a minute, and take a few steps back!",
      "typewriter": {
        "speed": 0.05,
        "speedUp": 0.01
      },
      "painting": {
        "alpha": 0.3,
        "time": 1
      },
