    },
    {
      "actor": 201010,
      "side": 2,
      "dir": 1,
      "nameColor": "#a9f548",
      "blackBg": true,
      "expression": 3,
      "say": "Yeah! You can't just \"schedule\" a concert out of nowhere! That wasn't part of our plans at all!",
      "typewriter": {
        "speed": 0.05,
        "speedUp": 0.01
      },
      "action": [
        {
          "y": 45,
          "type": "shake",
          "dur": 0.15,
          "number": 2,
